@model IEnumerable<Noclegi.Models.RentOffer>

@{
    ViewData["Title"] = "Rent Offers";
}

<h2>@ViewData["Title"] </h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-md">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-xs" asp-route-id="@item.RentOfferId">Edit</a>
                <a asp-action="Details" class="btn btn-warning btn-xs" asp-route-id="@item.RentOfferId">Details</a>
                <a asp-action="Delete" class="btn btn-warning btn-xs" asp-route-id="@item.RentOfferId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
