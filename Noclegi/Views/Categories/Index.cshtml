@model IEnumerable<Noclegi.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h2>@ViewData["Title"] </h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-md">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-warning btn-xs" asp-route-id="@item.CategoryId">Edit</a> 
                <a asp-action="Details"  class="btn btn-warning btn-xs" asp-route-id="@item.CategoryId">Details</a> 
                <a asp-action="Delete"  class="btn btn-warning btn-xs" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
